%h1= link_to "Users", admins_users_index_path

.row-fluid
	.block-body
		%BR
		%table.table.table-striped{width: '100%'}
			%thead
				%tr.medium
					%th User ID
					%th First Name
					%th Last Name
					%th Email
					%th Gender
			%tbody
				= search_form_for @search, url: admins_users_index_path do |f|
					%td= f.text_field :id_eq, class: "form-control input-sm", size: 4
					%td= f.text_field :fname_cont, class: "form-control input-sm", size: 4
					%td= f.text_field :lname_cont, class: "form-control input-sm", size: 4
					%td= f.text_field :email_cont, class: "form-control input-sm", size: 4
					%td= f.text_field :gender_eq, class: "form-control input-sm", size: 4
					
					%td.actions
						%button.btn.btn-default{:type => "submit"}
							%i.glyphicon.glyphicon-search
						.btn.btn-default= link_to content_tag(:i, "", class: "glyphicon glyphicon-remove"),admins_users_index_path , class:"cancel-button"

				-@users.each do |user|
					%tr.medium
						%td= link_to user.id, admins_user_path(user.id)
						%td= user.fname	
						%td= user.lname
						%td= user.email 
						%td= user.gender    
=paginate @users
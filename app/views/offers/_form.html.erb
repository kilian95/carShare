<%= simple_form_for @offer, html: { multipart: true } do |f| %>
	<% if @offer.errors.any? %>
		<div id="errors">
			<h2>
				= pluralize(@offer.errors.count, "error")
				prevented this post from saving
			</h2>	
			<ul>
				<% @offer.errors.full_messages.each do |msg|   %>
					<li>
            			<%= msg %>
          			</li>
        		<% end %>
      		</ul>
    	</div>
  <% end %>


  <%= render 'requests/map'%>

	
  <div class="form-group">
    <div class="box panel panel-default new">
      <div id="hide">
        <%= f.input :departure, input_html: {class: 'form-control', id: "departure"} %>
        <h4>to</h4>
        <%= f.input :destination, input_html: { class: 'form-control', id: "destination" } %>
      </div>  
      <%= f.input :time %>
      <%= f.input :seats %>
      <%= f.input :desc %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>



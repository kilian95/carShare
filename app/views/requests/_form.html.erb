<%= simple_form_for @request, html: { multipart: true } do |f| %>
  <% if @request.errors.any? %>
    <div id="errors">
      <h2>
        <%= pluralize(@request.errors.count, "error") %>
        prevented this post from saving
      </h2>
      <ul>
        <% @request.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

<%= render 'map'%>


  <div class="form-group">
    <div class="box panel panel-default new">
      <%= f.input :departure, input_html: {class: 'form-control', id: "departure"} %>
      <h4>to</h4>
      <%= f.input :destination, input_html: { class: 'form-control', id: "destination" } %>
      <%= f.input :time %>
      <%= f.input :desc %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>


